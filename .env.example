# --- LLM Provider ---
ANTHROPIC_API_KEY=sk-ant-...
GOOSE_MODEL=<model>

# --- Database ---
DATABASE_URL=jdbc:postgresql://localhost:5432/worldmind
DB_USER=worldmind
DB_PASSWORD=<password>

# --- Centurion Images ---
CENTURION_IMAGE_REGISTRY=ghcr.io/<github-username>
DOCKER_USERNAME=<github-username>
# CF CLI requires this exact variable name for Docker registry auth
CF_DOCKER_PASSWORD=ghp_<github-pat-with-read-packages-scope>

# --- Starblaster Runtime Images ---
STARBLASTER_IMAGE_PREFIX=starblaster
# Resolved image: ${CENTURION_IMAGE_REGISTRY}/${STARBLASTER_IMAGE_PREFIX}:${runtimeTag}
# Example: ghcr.io/dbbaskette/starblaster:java

# --- Cloud Foundry (only needed for --cf) ---
CF_API_URL=https://api.sys.example.com
CF_ORG=my-org
CF_SPACE=my-space
CF_USERNAME=<cf-username>
CF_PASSWORD=<cf-password>
CENTURION_FORGE_APP=centurion-forge
CENTURION_GAUNTLET_APP=centurion-gauntlet
CENTURION_VIGIL_APP=centurion-vigil
CENTURION_PULSE_APP=centurion-pulse
CENTURION_PRISM_APP=centurion-prism

# --- MCP Servers (legacy, optional) ---
MCP_ENABLED=false
# Server "nexus" is defined in application.yml. Set these to connect:
# NEXUS_MCP_URL=https://mcp-gateway.example.com/sse
# NEXUS_MCP_TOKEN=<shared-bearer-token>
# Per-consumer tokens override the shared token for scoped permissions:
# NEXUS_MCP_TOKEN_ORCHESTRATOR=<token>
# NEXUS_MCP_TOKEN_FORGE=<token>
# NEXUS_MCP_TOKEN_GAUNTLET=<token>
# NEXUS_MCP_TOKEN_VIGIL=<token>
# NEXUS_MCP_TOKEN_PULSE=<token>
# NEXUS_MCP_TOKEN_PRISM=<token>
# To add more servers, define them in application.yml under worldmind.mcp.servers

# ================================================================
# Nexus MCP Gateway (Nova Force)
# ================================================================

# Master switch to enable/disable all Nexus MCP integration.
# When false, graph nodes run without tools, centurions launch without Nexus.
NEXUS_ENABLED=false

# Gateway URL — single endpoint for all MCP traffic
# NEXUS_URL=http://nexus:8090/mcp

# --- Core Node Tokens ---
# Each graph node authenticates to Nexus as a dedicated user.
# Nodes with no MCP access (upload, schedule) still accept tokens
# for future extensibility — Nexus simply returns zero tools.
# NEXUS_CORE_CLASSIFY_TOKEN=
# NEXUS_CORE_UPLOAD_TOKEN=
# NEXUS_CORE_PLAN_TOKEN=
# NEXUS_CORE_SCHEDULE_TOKEN=
# NEXUS_CORE_CONVERGE_TOKEN=
# NEXUS_CORE_SEAL_TOKEN=
# NEXUS_CORE_POSTMISSION_TOKEN=

# --- Centurion Type Tokens ---
# Injected into Starblaster containers at dispatch time.
# Centurions with no MCP access (prism, vigil) still accept tokens
# for future extensibility.
# NEXUS_CENTURION_FORGE_TOKEN=
# NEXUS_CENTURION_GAUNTLET_TOKEN=
# NEXUS_CENTURION_PRISM_TOKEN=
# NEXUS_CENTURION_VIGIL_TOKEN=
# NEXUS_CENTURION_PULSE_TOKEN=
