# --- Authentication ---
WORLDMIND_AUTH_USERNAME=admin
WORLDMIND_AUTH_PASSWORD=<your-password>

# --- LLM Provider ---
# Provider API Keys (uncomment and fill in to enable)
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=AIza...

# Default model selection
WORLDMIND_LLM_PROVIDER=anthropic
WORLDMIND_LLM_MODEL=claude-sonnet-4-20250514

# Legacy Goose settings (for agent workers)
GOOSE_MODEL=<model>

# --- Database ---
DATABASE_URL=jdbc:postgresql://localhost:5432/worldmind
DB_USER=worldmind
DB_PASSWORD=<password>

# --- Agent Images ---
AGENT_IMAGE_REGISTRY=ghcr.io/<github-username>
DOCKER_USERNAME=<github-username>
# CF CLI requires this exact variable name for Docker registry auth
CF_DOCKER_PASSWORD=ghp_<github-pat-with-read-packages-scope>

# --- Sandbox Runtime Images ---
SANDBOX_IMAGE_PREFIX=sandbox
# Resolved image: ${AGENT_IMAGE_REGISTRY}/${SANDBOX_IMAGE_PREFIX}:${runtimeTag}
# Example: ghcr.io/dbbaskette/sandbox:java

# --- Cloud Foundry (only needed for --cf) ---
CF_API_URL=https://api.sys.example.com
CF_ORG=my-org
CF_SPACE=my-space
CF_USERNAME=<cf-username>
CF_PASSWORD=<cf-password>
AGENT_CODER_APP=agent-coder
AGENT_TESTER_APP=agent-tester
AGENT_REVIEWER_APP=agent-reviewer
AGENT_RESEARCHER_APP=agent-researcher
AGENT_REFACTORER_APP=agent-refactorer
AGENT_DEPLOYER_APP=agent-deployer

# --- Deployer Defaults ---
CF_APPS_DOMAIN=tas-tdc.kuhn-labs.com
DEPLOYER_HEALTH_TIMEOUT=300
DEPLOYER_DEFAULT_MEMORY=1G

# --- MCP Servers (optional) ---
MCP_ENABLED=false
# Server "nexus" is defined in application.yml. Set these to connect:
# NEXUS_MCP_URL=https://mcp-gateway.example.com/sse
# NEXUS_MCP_TOKEN=<shared-bearer-token>
# Per-consumer tokens override the shared token for scoped permissions:
# NEXUS_MCP_TOKEN_ORCHESTRATOR=<token>
# NEXUS_MCP_TOKEN_CODER=<token>
# NEXUS_MCP_TOKEN_TESTER=<token>
# NEXUS_MCP_TOKEN_REVIEWER=<token>
# NEXUS_MCP_TOKEN_RESEARCHER=<token>
# NEXUS_MCP_TOKEN_REFACTORER=<token>
# NEXUS_MCP_TOKEN_DEPLOYER=<token>
# To add more servers, define them in application.yml under worldmind.mcp.servers
